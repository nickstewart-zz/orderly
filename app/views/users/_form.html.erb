<%= form_for(@user) do |f| %>
  <%= render "shared/errors", object: @user %>
  <fieldset>
    <ol>
      <li class="required">
        <%= f.label :name %>
        <%= f.text_field :name, size: 40, autofocus: true %>
      </li>
      <li class="required">
        <%= f.label :email %>
        <%= f.email_field :email %>
      </li>
      <li class="required">
        <%= f.label :password %>
        <%= f.password_field :password, size: 40 %>
      </li>
      <li class="required">
        <%= f.label :password_confirmation, 'Confirm Password' %>
        <%= f.password_field :password_confirmation, size: 40 %>
      </li>
    </ol>
    <p>
    <% if @user.new_record? %>
      <%= f.submit "Create Account" %>
      <%= link_to "Cancel", users_path, class: 'button' %>
    <% else %>
      <%= f.submit "Update Account" %> 
      <%= link_to "Cancel", user_path, class: 'button' %>
    <% end %>
    </p>
  </fieldset>
<% end %>