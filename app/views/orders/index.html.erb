<h1><%= pluralize(@orders.size, "Sales Order") %></h1>

<ul>
	<% @orders.each do |order| %>
	    <article class="order">
		  <h3>Order Ref.: <%= link_to order.id, order_path(order)  %></h3>
		  <p>Date: <%= order.created_at %></span></h3>
		  <p>Customer: <%= order.customer_company %></p>
		  <p>Contact: <%= order.customer_name %>
		  <table>
	        <tr>
	          <th>Model Number</th>
			  <th>Description</th>
			  <th>Price</th>
	        </tr>
			<% order.products.each do |product| %>
  	        <tr>
  	          <td><%= product.code %></td>
			  <td><%= product.group %>, <%= product.options_standard %>, Options: <%= product.options_additional %></td>
			  <td><%= product.price %>
  	        </tr>
			<% end %>
	      </table>
		  <p>Total: <%= number_to_currency(order.total) %></p>
		</article>
	<% end %>
</ul>