<%= form_for @order do |f| %>
  <%= render "shared/errors", object: @order %>
	<p>
	  <%= f.label :customer_company %></br>
	  <%= f.text_field :customer_company, autofocus: true %>
	</p>
	<p>
	  <%= f.label :customer_name %></br>
	  <%= f.text_field :customer_name %>
	</p>
	Products:
	<ul>
		<%= f.fields_for :products do |products_form| %>
		<%= render "product_fields", :f => products_form %>
		<% end %>
	</ul>
	<p>
	  <%= f.label :total %></br>
	  <%= f.number_field :total %>
	</p>
	<p>
	  <%= f.submit %> | 
	  <%= link_to "Cancel", orders_path %>
	</p>
<% end %>