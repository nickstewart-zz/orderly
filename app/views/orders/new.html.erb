<h1>New Order</h1>

<%= form_for @order do |f| %>
	<p>
	  <%= f.label :customer %></br>
	  <%= f.text_field :customer %>
	</p>
	<p>
	  <%= f.label :model_number %></br>
	  <%= f.text_field :model_number %>
	</p>
	<p>
	  <%= f.label :description %></br>
	  <%= f.text_area :description %>
	</p>
	<p>
	  <%= f.label :delivery_due_on %></br>
	  <%= f.date_select :delivery_due_on %>
	</p>
	<p>
	  <%= f.label :sales_person %></br>
	  <%= f.text_field :sales_person %>
	</p>
	<p>
	  <%= f.label :total %></br>
	  <%= f.text_field :total %>
	</p>
	<p>
	  <%= f.submit %>
	</p>
<% end %>